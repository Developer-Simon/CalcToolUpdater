{
	"name": "CalcToolClient",
	"version": "1.2.0",
	"main": "main.js",
	"description": "Program to install and update MS-Excel CalculationTool",
	"author": "Developer-Simon",
	"scripts": {
		"publish": "build --win -p always",
		"build": "build --dir",
		"winbuild": "build --win"
	},
	"devDependencies": {
		"electron": "^3.0.2",
		"electron-builder": "^20.28.4"
	},
	"dependencies": {
		"bootstrap": "^5.0.0-beta2",
		"bootstrap-icons": "^1.3.0",
		"electron-log": "^1.3.0",
		"electron-store": "^6.0.1",
		"electron-updater": "^4.0.6",
		"jquery": "^3.5.1",
		"popper.js": "^1.16.1",
		"regedit": "^3.0.3",
		"xml-js": "^1.6.11"
	},
	"build": {
		"win": {
			"target": "nsis",
			"requestedExecutionLevel": "requireAdministrator"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "Developer-Simon",
				"repo": "CalcToolUpdater"
			}
		],
		"extraFiles": [
			"res/**/*"
		],
		"appId": "com.github.DevSimon.CalcToolUpdater",
		"mac": {
			"category": "excel.tools",
			"target": [
				"zip",
				"dmg"
			]
		}
	},
	"files": [
		"./modules/installer.js"
	]
}
